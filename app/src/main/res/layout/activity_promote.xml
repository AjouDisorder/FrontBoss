<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Home.PromoteActivity">

    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" 메뉴 홍보글 등록 "
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/home_title">

            <TextView
                android:text="메뉴명"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_name"
                android:hint="메뉴이름"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:text="메뉴 타입"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_type"
                android:hint="메뉴 타입"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>


            <TextView
                android:text="할인가격"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_price"
                android:hint="할인된 가격"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:text="제한 날짜 설정"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_aseason"
                android:hint="ex)2020.05.16"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_bseason"
                android:hint="ex)2020.05.30"
                android:inputType="datetime"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:text="제한 시간 설정"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_atime"
                android:hint="ex)14:00"
                android:inputType="datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_btime"
                android:hint="ex)16:00"
                android:inputType="datetime"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:text="제한수량"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_limit"
                android:hint="제한 수량"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>

            <TextView
                android:text="메뉴 설명"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/pro_menu_detail"
                android:hint="메뉴 설명"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_primaryColor="@color/myTextColor"
                app:met_baseColor="@color/myTextColor"
                app:met_textColorHint="@color/myTextColor"
                app:met_iconPadding="0dp">
            </com.rengwuxian.materialedittext.MaterialEditText>


            <Button
                android:id="@+id/pro_menu_submit"
                android:text="메뉴 홍보글 등록"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#431F63"
                android:layout_marginBottom="32dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>