<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.MartCreateActivity">

    <TextView
        android:id="@+id/mart_select_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text=" 가게 목록 "
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mart_add_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#431F63"
        android:text="가게 추가"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mart_select_title"
        app:layout_constraintEnd_toEndOf="@+id/mart_select_title"
        app:layout_constraintTop_toTopOf="@+id/mart_select_title" />

    <LinearLayout
        android:id="@+id/martListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mart_select_title">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/martListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mart_select_title" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>